<%= form_with(model: @content, local: true) do |form| %>
  <% if @content.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@content.errors.count, "error") %> prohibited this content from being saved:</h2>

      <ul>
      <% @content.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= @content.user.name %>
  </div>

  <div class="field">
    <%= form.text_area :body %>
  </div>
  <div class="field">
    <%= form.text_field :tag_name %>
  </div>
  <div class="field">
    <%= form.check_box :tag_check, {checked: true}, true, false %>タグをお気に入りに追加
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
